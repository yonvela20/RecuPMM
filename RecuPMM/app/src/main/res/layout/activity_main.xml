<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yon_pc.recupmm.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textSize="100px" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="500px"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:text="USUARIO"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/usuarioCorrecto"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:textAlignment="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="62dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="500px"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:text="CONTRASEÑA"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/contraseñaCorrecta"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp">

        <Button
            android:id="@+id/Entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonRegistro"
            android:layout_alignBottom="@+id/buttonRegistro"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginEnd="53dp"
            android:layout_marginRight="53dp"
            android:text="ENTRAR" />

        <Button
            android:id="@+id/buttonRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:text="REGISTRARSE" />
    </RelativeLayout>
</LinearLayout>
