<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yon_pc.recupmm.Registro">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:text="REGISTRO"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="80px" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="500px"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:text="USUARIO"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        android:hint="Usuario"
        android:id="@+id/registroUsuario" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="58dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="500px"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:text="CONTRASEÑA"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:id="@+id/registroContraseña" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/volverLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/registro"
            android:layout_alignBottom="@+id/registro"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginEnd="43dp"
            android:layout_marginRight="43dp"
            android:text="VOLVER" />

        <Button
            android:id="@+id/registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:text="REGISTRARSE" />
    </RelativeLayout>

</LinearLayout>
